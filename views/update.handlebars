<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link rel='stylesheet' type='text/css' href='css/styles.css'/>
        <title>Assignment 6</title>
    </head>
    <body>
        <div id="form_container">
    <h2>Updating</h2>
    {{#each result}}
    <form action="/update" method="get">
        <label for "name"> Name of Exercise:</label>
        <input type="text" name="name" class="input_field" placeholder="{{this.name}}">
        <label for "rep"> Number of Reps:</label>
        <input type="text" name="reps" class="input_field" placeholder="{{this.reps}}">
        <label for "weight"> Amount of Weight:</label>
        <input type="text" name="weight" class="input_field" placeholder="{{this.weight}}">
        <label for "date"> Date (MM-DD-YYYY):</label>
        <input type="text" name="date" class="input_field" placeholder="{{this.date}}">
        <label for "lbs"> Units used:</label>
        {{#if this.lbs}}
        <select name="lbs" class="dropdown">
            <option value="lbs" selected>lbs</option>
            <option value="kgs">kgs</option>
        </select>
        {{else}}
        <select name="lbs" class="dropdown">
            <option value="lbs">lbs</option>
            <option value="kgs" selected>kgs</option>
        </select>
        {{/if}}
        <input type="submit" class="submit_btn" name="Save" value="Save">
    </form>
    {{/each}}

</div>
    </body>
</html>
